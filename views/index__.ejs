<% layout('layout/root_layout') -%>
<% block('title', 'Kashif Report'); -%>

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Plate: <span id="plateNumberShow">N/A</span></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <span id="vehicleSimpleInfoShow">
                            N/A
                        </span>
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content" id="sectionToPdf">

    <div class="col-md-12">
        <!-- we are adding the accordion ID so Bootstrap's collapse plugin detects it -->
        <div id="accordion">

            <!--  Wanted Status -->
            <div id="wantedStatusCard" class="card white-border bg-theme">
                <div class="card-header">
                    <h4 class="card-title w-100">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="">
                                Wanted Status Code
                            </div>
                            <div id="wantedStatusMappingText" class="">
                                N/A
                            </div>
                        </div>
                    </h4>
                </div>
            </div>
            <!--  Wanted Status -->

            <!--  Car Info -->
            <div class="card white-border bg-theme">
                <div class="card-header">
                    <h4 class="card-title w-100">
                        <a class="d-block w-100 text-white" data-toggle="collapse" href="#collapseOne">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="">
                                    More Car Info
                                </div>
                                <div id="carInfoIndicator" class="">
                                    N/A
                                </div>
                            </div>
                        </a>
                    </h4>
                </div>
                <div id="collapseOne" class="collapse" data-parent="#accordion">
                    <div class="card-body">
                        <table class="table table-head-fixed text-nowrap">
                            <tbody id="carInfoTableBody">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--  Car Info -->

            <!--  Legal Status -->
            <div class="card bg-theme white-border">
                <div class="card-header">
                    <h4 class="card-title w-100">
                        <a class="d-block w-100 text-white" data-toggle="collapse" href="#collapseThree">

                            <div class="d-flex align-items-center justify-content-between">
                                <div class="">
                                    Legal Status Codes
                                </div>
                                <div class="">
                                    (<span id="totalStatusCodeData">0</span>) Legal Status Data
                                </div>
                            </div>

                        </a>
                    </h4>
                </div>
                <div id="collapseThree" class="collapse show" data-parent="#accordion">
                    <div class="card-body table-responsive p-0" style="height: 150px;">

                        <table class="table table-head-fixed text-nowrap">
                            <tbody id="legalStatusTableData"></tbody>
                        </table>

                    </div>
                </div>
            </div>
            <!--  Legal Status -->

        </div>
    </div>

</div>
<!-- /.content -->


<% script('res_codes.js') -%>
<% script('car-data-index.js') -%>
